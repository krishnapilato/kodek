{
  "tools": [
    {
      "name": "Java",
      "version": "latest",
      "description": "Java Runtime Environment (JRE) and Java Development Kit (JDK) for running and developing Java applications.",
      "installCommand": {
        "windows": "choco install openjdk --version=latest",
        "macos": "brew install openjdk",
        "linux": "sudo apt install openjdk"
      },
      "checkCommand": "java -version",
      "platforms": ["Windows", "Linux", "macOS"],
      "documentation": "https://www.java.com"
    },
    {
      "name": "Maven",
      "version": "latest",
      "description": "A build automation and dependency management tool for Java projects.",
      "installCommand": {
        "windows": "choco install maven --version=latest",
        "macos": "brew install maven",
        "linux": "sudo apt install maven"
      },
      "checkCommand": "mvn -version",
      "platforms": ["Windows", "Linux", "macOS"],
      "documentation": "https://maven.apache.org"
    },
    {
      "name": "Node.js",
      "version": "latest",
      "description": "JavaScript runtime for building server-side and networked applications.",
      "installCommand": {
        "windows": "choco install nodejs --version=latest",
        "macos": "brew install node",
        "linux": "sudo apt install nodejs npm"
      },
      "checkCommand": "node -v",
      "platforms": ["Windows", "Linux", "macOS"],
      "documentation": "https://nodejs.org"
    },
    {
      "name": "Visual Studio Code",
      "version": "latest",
      "description": "A lightweight, cross-platform code editor with support for multiple languages.",
      "installCommand": {
        "windows": "choco install vscode --version=latest",
        "macos": "brew install --cask visual-studio-code",
        "linux": "sudo apt install code"
      },
      "checkCommand": "code --version",
      "platforms": ["Windows", "Linux", "macOS"],
      "documentation": "https://code.visualstudio.com"
    },
    {
      "name": "DBeaver",
      "version": "latest",
      "description": "Universal database management tool for developers and database administrators.",
      "installCommand": {
        "windows": "choco install dbeaver --version=latest",
        "macos": "brew install --cask dbeaver-community",
        "linux": "sudo snap install dbeaver-ce"
      },
      "checkCommand": "dbeaver -version",
      "platforms": ["Windows", "Linux", "macOS"],
      "documentation": "https://dbeaver.io"
    },
    {
      "name": "Docker",
      "version": "latest",
      "description": "Platform for developing, shipping, and running containerized applications.",
      "installCommand": {
        "windows": "choco install docker-desktop --version=latest",
        "macos": "brew install --cask docker",
        "linux": "sudo apt install docker.io"
      },
      "checkCommand": "docker --version",
      "platforms": ["Windows", "Linux", "macOS"],
      "documentation": "https://www.docker.com"
    },
    {
      "name": "Git",
      "version": "latest",
      "description": "Version control system for tracking changes in source code.",
      "installCommand": {
        "windows": "choco install git --version=latest",
        "macos": "brew install git",
        "linux": "sudo apt install git"
      },
      "checkCommand": "git --version",
      "platforms": ["Windows", "Linux", "macOS"],
      "documentation": "https://git-scm.com"
    },
    {
      "name": "Angular CLI",
      "version": "latest",
      "description": "Command-line interface for Angular development.",
      "installCommand": {
        "windows": "npm install -g @angular/cli",
        "macos": "npm install -g @angular/cli",
        "linux": "npm install -g @angular/cli"
      },
      "checkCommand": "ng version",
      "platforms": ["Windows", "Linux", "macOS"],
      "documentation": "https://angular.dev"
    },
    {
      "name": "Postman",
      "version": "latest",
      "description": "API platform for building and testing APIs.",
      "installCommand": {
        "windows": "choco install postman --version=latest",
        "macos": "brew install --cask postman",
        "linux": "sudo snap install postman"
      },
      "checkCommand": "postman --version",
      "platforms": ["Windows", "Linux", "macOS"],
      "documentation": "https://www.postman.com"
    }
  ]
}